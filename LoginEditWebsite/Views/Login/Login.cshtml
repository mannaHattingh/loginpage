
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-controller="Login" asp-action="Login" class="form-horizontal" method="post" id="loginForm" novalidate>
    @Html.AntiForgeryToken()
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }
    <div class="login-title">
        <h3 class="font-bold">Login</h3>
    </div>
    <div class="px-0 py-0">
        <div class="form-group mb-3">
            <label asp-for="Username" class="font-semiBold"></label>
            <input asp-for="Username" class="form-control" type="text" autofocus required>
        </div>

        <div class="form-group mb-3" id="divPassword">
            <label asp-for="Password" class="font-semiBold">Password</label>
            <div class="input-group">
                <input asp-for="Password" class="form-control password" type="password" required />
                <i class="uil-eye-slash input-icon" id="viewPassword"></i>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button class="btn btn-primary px-4 btn-block" type="submit" id="btnSubmit">Login</button>
            </div>
        </div>
    </div>
</form>

